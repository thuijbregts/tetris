    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/direction_controls"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <RelativeLayout
                    android:id="@+id/game_view_left"
                    style="@style/button_direction_style">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/arrow_left"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/game_view_down"
                    style="@style/button_direction_style"
                    android:layout_below="@id/game_view_left"
                    android:layout_toRightOf="@id/game_view_left">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/arrow_down"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/game_view_right"
                    style="@style/button_direction_style"
                    android:layout_toRightOf="@id/game_view_down">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/arrow_right"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <Space
            android:layout_width="25dp"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

