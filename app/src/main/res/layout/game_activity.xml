                android:id="@+id/game_view_rotate_right"
                style="@style/button_rotation_style"
                android:background="@drawable/button_oval"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/arrow_right_rotate"/>
            </RelativeLayout>

            <RelativeLayout
